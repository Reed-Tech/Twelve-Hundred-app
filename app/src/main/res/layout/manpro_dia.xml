<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/edittext_round"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext_round"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Please select Action"
                android:textSize="15dp"
                android:id="@+id/psg"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/apfd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Add Product to Flash deals"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15dp"
                    android:textColor="#000000"
                     />

                <TextView
                    android:id="@+id/aptp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:text="Add Product to Promotions"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/aptss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:text="Add Product to Seasonal sales"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/editp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:text="Edit Product"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/delp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:text="Delete Product"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Close"
                android:id="@+id/close_man"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="150dp"
                android:drawableLeft="@drawable/dia_close"
                android:gravity="center"
                android:fontFamily="@font/segoeui"
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>